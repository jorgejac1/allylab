{
  "name": "allylab",
  "version": "1.0.0",
  "description": "Enterprise-grade web accessibility scanner with AI-powered fix suggestions",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:website": "npm run dev --workspace=website",
    "build:website": "npm run build --workspace=website",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:dashboard\"",
    "dev:api": "npm run dev --workspace=@allylab/api",
    "dev:dashboard": "npm run dev --workspace=@allylab/dashboard",
    "build": "npm run build --workspaces",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:api": "vitest run --project api",
    "test:dashboard": "vitest run --project dashboard",
    "test:cli": "vitest run --project cli",
    "clean": "rm -rf packages/*/dist packages/*/.turbo node_modules/.cache packages/*/coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/api/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "packages/dashboard/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "packages/cli/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "axe-core",
    "scanner",
    "testing",
    "web-quality"
  ],
  "author": "Jorge Jacinto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jorgejac1/allylab.git"
  },
  "bugs": {
    "url": "https://github.com/jorgejac1/allylab/issues"
  },
  "homepage": "https://github.com/jorgejac1/allylab#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.14",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.14"
  }
}
