{
  "name": "allylab",
  "version": "1.0.0",
  "description": "Enterprise-grade web accessibility scanner with AI-powered fix suggestions",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:dashboard\"",
    "dev:api": "npm run dev --workspace=@allylab/api",
    "dev:dashboard": "npm run dev --workspace=@allylab/dashboard",
    "build": "npm run build --workspaces",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/.turbo node_modules/.cache",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/api/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "packages/dashboard/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "packages/cli/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "axe-core",
    "scanner",
    "testing",
    "web-quality"
  ],
  "author": "Jorge Jacinto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jorgejac1/allylab.git"
  },
  "bugs": {
    "url": "https://github.com/jorgejac1/allylab/issues"
  },
  "homepage": "https://github.com/jorgejac1/allylab#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.15.0"
  }
}
