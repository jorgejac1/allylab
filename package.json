{
  "name": "allylab",
  "version": "1.0.0",
  "description": "Enterprise-grade web accessibility scanner with AI-powered fix suggestions",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "api": "npm run dev --workspace=@allylab/api",
    "dashboard": "npm run dev --workspace=@allylab/dashboard",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=@allylab/api",
    "build:dashboard": "npm run build --workspace=@allylab/dashboard",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "axe-core",
    "scanner",
    "testing",
    "web-quality"
  ],
  "author": "Jorge Jacinto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jorgejac1/allylab.git"
  },
  "bugs": {
    "url": "https://github.com/jorgejac1/allylab/issues"
  },
  "homepage": "https://github.com/jorgejac1/allylab#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^16.5.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.15.0"
  }
}